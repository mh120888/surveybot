# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                               controllers.ApplicationController.index
POST    /survey                                         controllers.ApplicationController.survey
GET     /data                                           controllers.ApplicationController.data()
GET     /dashboard                                      controllers.ApplicationController.dashboard
POST    /survey_respondents/:id/delete                  controllers.ApplicationController.deleteSurveyRespondent(username: String, id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
